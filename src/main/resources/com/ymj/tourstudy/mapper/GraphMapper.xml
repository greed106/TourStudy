<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ymj.tourstudy.mapper.GraphMapper">

    <update id="updateTourism" parameterType="com.ymj.tourstudy.pojo.Tourism">
        UPDATE tour_system.tourism
        <set>
            <if test="graph != null">graph = #{graph},</if>
            <if test="description != null">description = #{description},</if>
            <if test="views != null">views = #{views},</if>
            <if test="ratings != null">ratings = #{ratings},</if>
            <if test="score != null">score = #{score},</if>
        </set>
        WHERE name = #{name}
    </update>

</mapper>
